<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_action_quotations_chriamrelax" model="ir.actions.act_window">
        <field name="name">Quotation</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">form,tree,graph</field>
        <field name="domain">[('reservation_id', '=', active_id)]</field>
        <field name="context">{'search_default_reservation_id': active_id, 'default_reservation_id': active_id}</field>
    </record>

    <record id="sale_view_inherit_chriamrelax" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='technical']" position="inside">
                <field name="reservation_id" help="Log in the chatter from which opportunity the order originates" groups="base.group_no_one"/>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="title" string="Title"/>
            </xpath>
        </field>
    </record>

    <!-- This menu is display in CRM app when sale is installed-->
    <menuitem
        id="sale_order_menu_quotations_chriamrelax"
        name="My Quotations"
        action="sale.action_quotations"
        parent="school.menu_root"
        sequence="2"/>
</odoo>